<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".ui.SelectUserFragment">

    <ImageButton
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:id="@+id/btn_back"
        android:tint="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/txt_choose_lang"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:text="Which of these best describe you?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_lender"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp"
        android:checkable="true"
        android:clickable="true"
        app:checkedIconTint="@color/white"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/background_tint"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt_choose_lang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="true">
        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Lender"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="Doggy ipsizzle dolizzle i'm in the shizzle amizzle, away adipiscing. "
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_borrower"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp"
        android:checkable="true"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/background_tint"
        app:checkedIconTint="@color/white"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_lender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="true">
        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="Borrower"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="Doggy ipsizzle dolizzle i'm in the shizzle amizzle, away adipiscing. "
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="44dp"
        app:srcCompat="@drawable/ic_baseline_navigate_next_24"
        app:tint="@color/white"
        android:backgroundTint="@color/blue_button_color"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>