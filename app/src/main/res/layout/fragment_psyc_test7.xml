<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.PsycTest7Fragment">

    <ImageButton
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:tint="@color/blue_button_color"
        android:id="@+id/btn_back"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>


    <TextView
        android:id="@+id/txt_7_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="7/7"
        android:textColor="@color/blue_button_color"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="96dp"
        android:text="@string/psyc_question_seven"
        android:textColor="@color/blue_button_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginStart="21dp"
        android:textColor="@color/blue_button_color"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/txt_question"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/txt_7"
        app:layout_constraintTop_toTopOf="@id/txt_7"
        android:backgroundTint="@color/blue_button_color"
        android:background="@drawable/ic_baseline_arrow_forward_24"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:id="@+id/toggle_button"
        android:orientation="vertical"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="@id/txt_question"
        app:layout_constraintTop_toBottomOf="@id/txt_question"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="?attr/materialButtonOutlinedStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="No"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="?attr/materialButtonOutlinedStyle" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_calc_score"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Calculate Credit Score"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginBottom="58dp"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue_button_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>